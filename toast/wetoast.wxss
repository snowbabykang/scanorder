/**toast.wxss**/
.wetoast {
	display: none;
}
.wetoast_show {
	display: block;
}
.wetoast__bd {
	opacity: 0;
	display: flex;
	flex-direction: column;
	position: fixed;
    z-index: 5000;
    min-width: 8.4em;
    max-width: 70%;
    top: 280rpx;
    left: 50%;
    padding:20rpx 30rpx;
    box-sizing: border-box;
    transform: translateX(-50%);
    background: rgba(40, 40, 40, 0.75);
    border-radius: 10rpx;
    color: #FFFFFF;
    word-wrap: break-word;
    word-break: break-all;
    align-items: center;
	justify-content: space-around;
  text-align: center;
}
.wetoast__bd__img {
	margin-top: 3px;
}
.wetoast__bd__img_desc {
    width: 100rpx;
    height: 100rpx;
    vertical-align: middle;
}
.wetoast__bd__title {
	margin: 3px 0;
	font-size: 28rpx;
}